<%= form_for @product do |f| %>
	<p>
		<%= f.label :name %>:
		<%= f.text_field :name %><br />
	</p>
	<p>
		<%= f.label :description %>:
		<%= f.text_field :description %><br />
	</p>
	<p>
		<%= f.label :price_in_cents %>:
		<%= f.integer :price_in_cents %><br />
	</p>
	<p>
		<%= f.label :image_url %>:
		<%= f.text_field :image_url %><br />
	</p>

	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>